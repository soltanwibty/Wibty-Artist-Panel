<div class="content-body" style="min-height: 1140px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Məlumatları Yeniləmək</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            <form>

                                <div class="form-row">
                                    <div class="form-group col-12">
                                        <div
                                            class="media d-sm-flex d-block text-center text-sm-left pb-4 mb-4 border-bottom">
                                            <img alt="image" class="rounded mr-sm-4 mr-0" width="130"
                                                src="/images/profile/6.jpg">
                                            <div class="media-body align-items-center">
                                                <div class="d-sm-flex flex-column d-block justify-content-between my-3 my-sm-0">
                                                    <label>Profil Şəkli</label>
                                                    <div class="custom-file">
                                                        <input type="file" name="imageFile" class="custom-file-input">
                                                        <label class="custom-file-label">Fayl seç</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Ad</label>
                                        <input type="text" name="firstName" class="form-control"
                                            placeholder="Adınız...">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Soyad</label>
                                        <input type="text" name="lastName" class="form-control"
                                            placeholder="Soyadınız...">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Artist Adı</label>
                                        <input type="text" name="artistName" class="form-control"
                                            placeholder="Artist adınız...">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Email</label>
                                        <input type="email" name="email" class="form-control"
                                            placeholder="hello@example.com">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Köhnə Şifrə</label>
                                        <input type="currentPassword" class="form-control" placeholder="********">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Yeni Şifrə</label>
                                        <input type="newPassword" class="form-control" placeholder="********">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Bio</label>
                                        <textarea class="form-control" placeholder="Özünüz haqqında..." rows="4" id="bio" name="bio"></textarea>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Yeniləmək</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>